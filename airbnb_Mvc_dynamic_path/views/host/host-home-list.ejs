<%- include('../partials/head') %>
</head>
<body class="bg-light">
  <%- include('../partials/nav') %>

  <main class="container bg-white shadow-lg rounded-4 p-4 mt-5">
    <h2 class="text-center text-danger fw-bold mb-4">
      Hey Host! Here are your homes:
    </h2>

    <div class="row justify-content-center g-4">
      <% registeredHomes.forEach(home => { %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="card h-100 shadow-sm border-0">
            <img
              src="<%=home.photoUrl && home.photoUrl.trim()!==''?home.photoUrl:'https://picsum.photos/400/300'%>"
              class="card-img-top"
              alt="<%= home.houseName %>"
              style="height: 200px; object-fit: cover;"
            />

            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-semibold mb-2">
                <%= home.houseName %>
              </h5>

              <p class="text-muted mb-2">
                <i class="fas fa-map-marker-alt me-2"></i>
                <%= home.location %>
              </p>

              <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="fw-bold text-danger">
                  ₹ <%= home.price %> / night
                </span>

                <span class="text-warning fw-semibold">
                  ★ <%= home.rating %>
                </span>
              </div>

              <div class="mt-auto d-flex gap-2">
                <a href="/host/edit/<%= home.id %>" class="btn btn-outline-primary btn-sm w-50">
                  Edit
                </a>
                <a href="/host/delete/<%= home.id %>" class="btn btn-outline-danger btn-sm w-50">
                  Delete
                </a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
  <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
