<%- include('../partials/head') %>
</head>
<body class="bg-light">
  <%- include('../partials/nav') %>

  <main class="container my-5">
    <div class="bg-white shadow-lg rounded-4 p-4">
      <h2 class="text-center text-danger fw-bold mb-4">
        Here are your favourites:
      </h2>

      <div class="row g-4 justify-content-center">
        <% registeredHomes.forEach(home => { %>
          <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm border-0">

              <img
                src="<%=home.photoUrl && home.photoUrl.trim()!==''?home.photoUrl:'https://picsum.photos/400/300'%>"
                class="card-img-top"
                alt="<%= home.houseName %>"
                style="height:200px; object-fit:cover;"
              />

              <div class="card-body d-flex flex-column">
                <h5 class="card-title fw-semibold">
                  <%= home.houseName %>
                </h5>

                <p class="text-muted small mb-2">
                  üìç <%= home.location %>
                </p>

                <div class="d-flex justify-content-between align-items-center mb-3">
                  <span class="fw-bold text-danger">
                    ‚Çπ <%= home.price %> / night
                  </span>

                  <span class="badge bg-warning text-dark">
                    ‚≠ê <%= home.rating %>
                  </span>
                </div>

                <a
                  href="/book/<%= home.id %>"
                  class="btn btn-success btn-sm mt-auto">
                  Book
                </a>
              </div>

            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </main>
  <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
